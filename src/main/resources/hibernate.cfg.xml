<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:mysql://localhost:3306/dbProjectESD?createDatabaseIfNotExist=true</property>
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="connection.username">Mitisha</property>
        <property name="connection.password">Mitisha@123</property>

        <!-- DB schema will be updated if needed -->
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="show_sql">true</property>
        <!-- Bean classes -->
        <mapping class="com.example.esdprojectnew.bean.Student" />
        <mapping class="com.example.esdprojectnew.bean.Employee" />
        <mapping class="com.example.esdprojectnew.bean.Placement" />
        <mapping class="com.example.esdprojectnew.bean.Placement_Student" />
        <mapping class="com.example.esdprojectnew.bean.Placement_Filter" />
        <mapping class="com.example.esdprojectnew.bean.Student_Courses" />

    </session-factory>
</hibernate-configuration>